@model HamBurger.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Detay</h1>

<div class="col-md-4">
    @if (Model.Image == null)
    {
        <img src="~/images/ürün resmi yok.png" width="150" height="100" />
    }
    else
    {
        <img src="~/images/products/@Model.Image" width="150" height="100" />
    }
</div>
<br />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Ürün Adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Ürün Tanım
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Fiyat
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Stok
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            Kategori
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categories.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-primary">Geri Dön</a>
</div>

