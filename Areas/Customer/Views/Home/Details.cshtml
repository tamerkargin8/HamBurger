@model HamBurger.Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="row">
        <form method="post">
            <input hidden asp-for="ProductId" />
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/images/products/@Model.Product.Image" style="height:200px; width: 200px" class="img-fluid rounded-start" alt="..." />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <dl class="row">
                                <dt class="col-sm-3">
                                    Stok
                                </dt>
                                <dd class="col-sm-9">
                                    @if (Model.Product.Stock != 0)
                                    {
                                        <label class="btn btn-success ">@Model.Product.Stock</label>
                                    }
                                    else
                                    {
                                        <label class="btn btn-danger">Ürün Stokta Yok</label>
                                    }
                                </dd>
                                <dt class="col-sm-3">
                                    Ürün Adı
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Product.Name)
                                </dd>
                                <dt class="col-sm-3">
                                    Detay
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Product.Description)
                                </dd>
                                <dt class="col-sm-3">
                                    Fiyat
                                </dt>
                                <dd class="col-sm-9">
                                    @Model.Product.Price.ToString("0,00") TL
                                </dd>
                                <dt class="col-sm-3">
                                    Adet
                                </dt>
                                <dd class="col-sm-9">
                                    <input asp-for="Count" class="form-control" />
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary form-control"><i class="bi bi-house-door"></i> Ana Sayfa</a>
                    </div>
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-3">
                        @if (Model.Product.Stock != 0)
                        {
                            <button type="submit" class="btn btn-success form-control" style="align-content:center"><i class="bi bi-cart4"> Sepete Ekle</i></button>
                        }
                        else
                        {
                         <label class="btn btn-danger">Ürün Stokta Yok</label>
                        }

                    </div>
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
                <br />
            </div>
        </form>
    </div>
</div>

